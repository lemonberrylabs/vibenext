{
  "name": "@vibecoder/control-plane",
  "version": "0.1.0",
  "description": "Control plane server for VibeCoder - an AI-powered coding assistant",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lemonberrylabs/vibecoder.git",
    "directory": "packages/control-plane"
  },
  "bugs": {
    "url": "https://github.com/lemonberrylabs/vibecoder/issues"
  },
  "homepage": "https://github.com/lemonberrylabs/vibecoder#readme",
  "keywords": ["vibecoder", "ai", "claude", "coding-assistant", "git", "fastify"],
  "files": ["dist", "bin", "README.md"],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "bin": {
    "vibe-dev": "./bin/vibe-dev.js"
  },
  "exports": {
    ".": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "fastify": "^5.2.1",
    "pino-pretty": "^13.1.3",
    "simple-git": "^3.27.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
