{
  "name": "vibenext",
  "version": "0.1.0",
  "description": "AI-powered coding assistant that runs as a sidecar to your Next.js application",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lemonberrylabs/vibenext.git"
  },
  "bugs": {
    "url": "https://github.com/lemonberrylabs/vibenext/issues"
  },
  "homepage": "https://github.com/lemonberrylabs/vibenext#readme",
  "keywords": [
    "vibenext",
    "ai",
    "claude",
    "nextjs",
    "react",
    "coding-assistant"
  ],
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/client/index.js",
  "types": "./dist/client/index.d.ts",
  "bin": {
    "vibe-dev": "./bin/vibe-dev.js"
  },
  "exports": {
    ".": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "default": "./dist/client/index.js"
    },
    "./server-actions": {
      "types": "./dist/client/server-actions.d.ts",
      "import": "./dist/client/server-actions.js",
      "default": "./dist/client/server-actions.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "release": "release-it"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "fastify": "^5.2.1",
    "pino-pretty": "^13.1.3",
    "simple-git": "^3.27.0",
    "uuid": "^11.0.5"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "next": "^15.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "release-it": "^19.2.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  }
}
